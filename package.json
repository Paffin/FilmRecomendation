{
  "name": "film-recommendation-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue}": "npm run lint --workspaces -- --fix",
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "husky": "^9.1.4",
    "lint-staged": "^15.2.10",
    "@typescript-eslint/parser": "^8.13.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0"
  }
}
